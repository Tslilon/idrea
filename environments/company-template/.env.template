# Logging configuration
# Set to WARNING for production (less verbose), INFO for debugging, DEBUG for detailed troubleshooting
LOG_LEVEL=WARNING

# =============================================================================
# COMPANY-SPECIFIC CONFIGURATION TEMPLATE
# =============================================================================
# Copy this to .env and replace all PLACEHOLDER values with actual credentials

# Meta/WhatsApp API Configuration
# Get these from https://developers.facebook.com/apps/
ACCESS_TOKEN="PLACEHOLDER_ACCESS_TOKEN"
APP_SECRET="PLACEHOLDER_APP_SECRET"
PHONE_NUMBER_ID="PLACEHOLDER_PHONE_NUMBER_ID"
VERIFY_TOKEN="PLACEHOLDER_VERIFY_TOKEN_1234"

# WhatsApp recipient for admin notifications
RECIPIENT_WAID="+PLACEHOLDER_ADMIN_PHONE"

# API version (usually doesn't change)
VERSION="v20.0"

# OpenAI Configuration  
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY="PLACEHOLDER_OPENAI_KEY"

# Google Services Configuration
# These files should be placed in the same directory as this .env file
GOOGLE_SERVICE_ACCOUNT_FILE="data/service-account.json"
GOOGLE_CREDENTIALS_JSON="data/credentials.json"

# Google Drive/Sheets IDs (get from URLs)
# Sheet: https://docs.google.com/spreadsheets/d/SHEET_ID/edit
# Folder: https://drive.google.com/drive/folders/FOLDER_ID  
GOOGLE_SHEET_ID="PLACEHOLDER_GOOGLE_SHEET_ID"
GOOGLE_FOLDER_ID="PLACEHOLDER_GOOGLE_FOLDER_ID" 